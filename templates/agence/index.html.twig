{% extends 'backbase.html.twig' %}
{% block title %}<title>Liste des Agences</title>{% endblock %}

{% block content %}
    <h1>Liste des Agences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_agence</th>
                <th>Email_agence</th>
                <th>Tel_agence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agence in agences %}
            <tr>
                <td>{{ agence.id }}</td>
                <td>{{ agence.nomAgence }}</td>
                <td>{{ agence.emailAgence }}</td>
                <td>{{ agence.telAgence }}</td>
                <td>
                    <a href="{{ path('app_agence_show', {'id': agence.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_agence_edit', {'id': agence.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('app_agence_send_email', {'id': agence.id}) }}" class="btn btn-primary">Mail</a>
                    {# Ajoutez un lien pour générer le code QR #}
                    <a href="{{ path('app_qr_codes', {'id': agence.id}) }}" class="btn btn-primary">Generate QR</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_agence_new') }}" class="btn btn-primary">Create new</a>

    {# Ajoutez des liens supplémentaires ici si nécessaire #}
    <a href="{{ path('app_assurance_index') }}" class="btn btn-primary">Go to assurance</a>
    <a href="{{ path('app_categorie_assurance_index') }}" class="btn btn-primary">GO to Categories</a>
    <a href="{{ path('app_home_page') }}" class="btn btn-primary">Go to FRONT</a>
{% endblock %}
