{% extends 'backbase.html.twig' %}

{% block title %}<title>Cartes</title>{% endblock %}

{% block content %}
    <h1>Carte </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_C</th>
                <th>Date_Exp</th>
                <th>Type_C</th>
                <th>Statut_C</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td>{{ carte.id }}</td>
                <td>{{ carte.NumC }}</td>
                <td>{{ carte.DateExp ? carte.DateExp|date('Y-m-d') : '' }}</td>
                <td>{{ carte.TypeC }}</td>
                <td>{{ carte.StatutC }}</td>
                <td>
                    
                    <a href="{{ path('app_carte_edit', {'id': carte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_carte_new') }}">Create new</a>
{% endblock %}


