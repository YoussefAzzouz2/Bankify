{% extends 'base.html.twig' %}

{% block title %}<title>Nouveau Credit</title>{% endblock %}

{% block content %}
<style>
    .credit-forum {
        text-align: center;
        color: white;
    }
</style>

{% for message in app.flashes('danger') %}
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{ message }}
    </div>
{% endfor %}

<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="detail-box">
                                <h1>Demander un credit</h1>
                                    <div class="credit-forum">
                                        {{ include('credit/_form.html.twig') }}
                                        <br>
                                        <p>*Pour savoir l'intervale de montant de chaque categorie voir le table ci-dessous</p>
                                    </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="img-box">
                                <img src="{{asset('front/images/slider-img.png')}}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
        </ol>
    </div>
</section>
{% endblock %}
{% block section %}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

    .table th,
    .table td {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    .table th {
        background-color: #f2f2f2;
    }

    .table tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    h3 {
        font-size: 24px; /* Taille de la police */
        font-weight: bold; /* Poids de la police (gras) */
        color: #333; /* Couleur du texte */
        margin-bottom: 10px; /* Marge en bas */
        /* Ajoutez d'autres styles selon vos besoins */
    }
</style>
<h3>La liste des categories :</h3>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Montant Minimale</th>
            <th>Montant Maximal</th>
        </tr>
    </thead>
    <tbody>
    {% for categorie_credit in categories %}
        <tr>
            <td>{{ categorie_credit.nom }}</td>
            <td>{{ categorie_credit.minMontant }}</td>
            <td>{{ categorie_credit.maxMontant }}</td>
        </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de categorie</td>
            </tr>
        {% endfor %}
{% endblock %}
{% block sec2 %}{% endblock %}
{% block why %}{% endblock %}
{% block info %}{% endblock %}
