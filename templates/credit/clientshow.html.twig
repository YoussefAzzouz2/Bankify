{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block content %}
<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="detail-box">
                                <h1>
                                    Vous pouvez ici avoir tous informations de votre crédit

                                </h1>
                                <p>
                                    et suivre les Remboursements
                                </p>
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="img-box">
                                <img src="{{asset('front/images/slider-img.png')}}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <ol class="carousel-indicators">
            <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
            
        </ol>
    </div>

</section>
{% endblock %}

{% block section %}
<div style="padding: 10px;">
    <a href="#">back</a>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id Credit</th>
                <td>{{ credit.id }}</td>
            </tr>
            <tr>
                <th>Montant Totale</th>
                <td>{{ credit.montantTotale }}</td>
            </tr>
            <tr>
                <th>Montant Restante</th>
                <td>dernier_remboursement</td>
            </tr>
            <tr>
                <th>Interét</th>
                <td>{{ credit.interet }}</td>
            </tr>
            <tr>
                <th>Date Creation</th>
                <td>{{ credit.dateC ? credit.dateC|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duree Totale</th>
                <td>{{ credit.dureeTotale }}</td>
            </tr>
            <tr>
                <th>Duree Restante</th>
                <td>dernier_remboursement</td>
            </tr>
        </tbody>
    </table>

    <a href="#">Suivre Remboursements</a>
    <br>
    <a href="#">Payer une partie de credit</a>
    <br>
    <a href="#">Payer la totalitée de credit</a>
</div>
{% endblock %}
