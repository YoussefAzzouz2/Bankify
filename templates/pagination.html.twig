<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if pagination.hasPreviousPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({'page': pagination.previousPageNumber})) }}">Previous</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        {% endif %}

        {% for page in pagination.pages %}
            {% if page %}
                <li class="page-item{% if pagination.currentPageNumber == page %} active{% endif %}">
                    <a class="page-link" href="{{ path(route, query|merge({'page': page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item disabled"><span class="page-link">...</span></li>
            {% endif %}
        {% endfor %}

        {% if pagination.hasNextPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({'page': pagination.nextPageNumber})) }}">Next</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        {% endif %}
    </ul>
</nav>