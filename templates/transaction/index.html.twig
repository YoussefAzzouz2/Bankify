{% extends 'base.html.twig' %}

{% block title %}<title>Transactions</title>{% endblock %}

{% block section %}
    <div class="row justify-content-center"><h1>Les transactions</h1></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Type</th>
                <th>Statue</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.Montant }}</td>
                <td>{{ transaction.DateT ? transaction.DateT|date('Y-m-d') : '' }}</td>
                <td>{{ transaction.TypeT }}</td>
                <td>{{ transaction.StatutT }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_transaction_show', {'id': transaction.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-center"><a class="btn btn-primary" href="{{ path('app_transaction_new') }}">Create new</a></div>
{% endblock %}


