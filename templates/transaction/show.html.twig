{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ transaction.Montant }}</td>
            </tr>
            <tr>
                <th>Date_T</th>
                <td>{{ transaction.DateT ? transaction.DateT|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type_T</th>
                <td>{{ transaction.TypeT }}</td>
            </tr>
            <tr>
                <th>Statut_T</th>
                <td>{{ transaction.StatutT }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transaction_index') }}">back to list</a>

    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
