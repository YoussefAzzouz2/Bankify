{% extends 'backbase.html.twig' %}

{% block title %}<title>Transactions</title>{% endblock %}

{% block content %}
    <h1>Les transactions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Date_T</th>
                <th>Type_T</th>
                <th>Statut_T</th>
                
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.Montant }}</td>
                <td>{{ transaction.DateT ? transaction.DateT|date('Y-m-d') : '' }}</td>
                <td>{{ transaction.TypeT }}</td>
                <td>{{ transaction.StatutT }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}




