{% extends 'base.html.twig' %}

{% block title %}
    <title>Pack</title>
{% endblock %}

{% block content %}
    <style>
        /* Styles for the form container */
        .form-container {
            max-width: 800px; /* Increased max-width */
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Styles for table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        /* Style for table rows */
        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Styles for form fields */
        .form-field {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            line-height: 1.5;
        }

        /* Style for the button */
        .btn {
            background-color: #1db954; /* Spotify green */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            display: block;
            width: 100%;
        }

        /* Hover effect */
        .btn:hover {
            background-color: #1ed760; /* Slightly lighter green on hover */
        }
    </style>

    <div class="form-container">
        <h1>Nos Pack</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom_pack</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Benefits</th>
                </tr>
            </thead>
            <tbody>
                {% for pack in packs %}
                    <tr>
                        <td>{{ pack.getNomPack() }}</td>
                        <td>{{ pack.Description }}</td>
                        <td>{{ pack.price }}</td>
                        <td>{{ pack.benefits }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
