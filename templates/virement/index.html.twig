{% extends 'base.html.twig' %}

{% block title %}<title>Virement</title>{% endblock %}

{% block content %}
    <h1>Virement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Compte_source</th>
                <th>Compte_destination</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for virement in virements %}
            <tr>
                <td>{{ virement.id }}</td>
                <td>{{ virement.compteSource }}</td>
                <td>{{ virement.compteDestination }}</td>
                <td>{{ virement.montant }}</td>
                <td>{{ virement.date ? virement.date|date('Y-m-d')}}</td>
                <td>{{ virement.heure ? virement.heure|date('H:i:s') : '' }}</td>
            </tr>

                <td>
                    <a href="{{ path('app_virement_show', {'id': virement.id}) }}">show</a>
                    <a href="{{ path('app_virement_edit', {'id': virement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_virement_new') }}">Create new</a>
{% endblock %}
