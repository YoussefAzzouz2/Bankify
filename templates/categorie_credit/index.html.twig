{% extends 'backbase.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Id Categorie</th>
                <th>Nom</th>
                <th>Montant Minimale</th>
                <th>Montant Maximal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_credit in categorie_credits %}
            <tr>
                <td>{{ categorie_credit.id }}</td>
                <td>{{ categorie_credit.nom }}</td>
                <td>{{ categorie_credit.minMontant }}</td>
                <td>{{ categorie_credit.maxMontant }}</td>
                <td>
                    <button class="btn" onclick="window.location.href='{{ path('categorie_show', {'id': categorie_credit.id}) }}'">Plus d'informations</button>
                    <br>
                    <button class="btn" onclick="window.location.href='{{ path('categorie_edit', {'id': categorie_credit.id}) }}'">Modifier</button>
                    {{ include('categorie_credit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn" onclick="window.location.href='{{ path('categorie_new') }}'">Ajouter une nouvelle categorie</button>
{% endblock %}
